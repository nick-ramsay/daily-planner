{
  "name": "daily-planner",
  "version": "1.0.0",
  "description": "An application to be used for planning daily goals and noting accomplishments",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-ramsay/daily-planner.git"
  },
  "author": "Nick Ramsay",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nick-ramsay/daily-planner/issues"
  },
  "homepage": "https://github.com/nick-ramsay/daily-planner#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.6.0",
    "axios": "^0.24.0",
    "concurrently": "^5.3.0",
    "core-js": "^3.20.3",
    "dd-trace": "^2.0.1",
    "dotenv": "^8.6.0",
    "express": "^4.17.2",
    "googleapis": "^67.1.1",
    "hot-shots": "^9.0.0",
    "if-env": "^1.0.4",
    "js-sha256": "^0.9.0",
    "mongodb": "^3.7.3",
    "mongoose": "^5.13.14",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.15"
  }
}
